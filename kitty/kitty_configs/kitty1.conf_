#foreground #ffa500
foreground #C70039
#foreground #FF0000
#cursor #39FF14
cursor #808080

#select color of text and background when selcting text
selection_foreground #808080
selection_background #fffacd

#Turn off changing of the text cursor to a bar when editing shell command line
shell_integration no-cursor

background_opacity         0.85
dynamic_background_opacity yes

cursor_blink_interval 0
cursor_shape block
cursor_beam_thickness 1.5

mouse_hide_wait -1

url_color #0087bd
url_style curly

open_url_with default

detect_urls yes

default_pointer_shape hand


# Fonts {{{
font_family      JetBrains Mono Regular
bold_font        JetBrains Mono Bold
italic_font      JetBrains Mono Italic
bold_italic_font JetBrains Mono Bold Italic
font_size           14.0
force_ltr           no
adjust_line_height  110%
adjust_column_width 0
disable_ligatures   cursor
# }}}

#enable copy-paste (to paste INTO terminal can also use shift+insert)
map ctrl+shift+c        copy_to_clipboard
map ctrl+shift+v        paste_from_clipboard

copy_on_select yes

#zoom in and out
map ctrl+plus change_font_size all +2.0
map ctrl+minus change_font_size all -2.0
map ctrl+o change_font_size all 0

#tab bar: ctrl + shift + t opens a new tab
tab_bar_edge bottom
tab_bar_margin_width 0.0
tab_bar_margin_height 0.0 0.5
tab_bar_style powerline 
tab_powerline_style round
tab_bar_align center

tab_activity_symbol #

active_tab_foreground   #000000
active_tab_background   #808080
active_tab_font_style   bold-italic
inactive_tab_foreground #ffffff
inactive_tab_background #808080
inactive_tab_font_style normal

#Window management (all layouts are enabled. Set the default one here. Toggle between them by running ctrl+shift+l)
enabled_layouts splits

#Create a new window splitting the space used by the existing one so that
# the two windows are placed one above the other
map f5 launch --location=hsplit
map alt+h launch --location=hsplit

# Create a new window splitting the space used by the existing one so that
# the two windows are placed side by side
map f6 launch --location=vsplit
map alt+h launch --location=hsplit

# Create a new window splitting the space used by the existing one so that
# the two windows are placed side by side if the existing window is wide or
# one above the other if the existing window is tall.
map f4 launch --location=split

# Rotate the current split, chaging its split axis from vertical to
# horizontal or vice versa
map f7 layout_action rotate

# Move the active window in the indicated direction
map shift+up move_window up
map shift+left move_window left
map shift+right move_window right
map shift+down move_window down

# Move the active window to the indicated screen edge
map ctrl+shift+up layout_action move_to_screen_edge top
map ctrl+shift+left layout_action move_to_screen_edge left
map ctrl+shift+right layout_action move_to_screen_edge right
map ctrl+shift+down layout_action move_to_screen_edge bottom

# Switch focus to the neighboring window in the indicated direction
map ctrl+left neighboring_window left
map ctrl+right neighboring_window right
map ctrl+up neighboring_window up
map ctrl+down neighboring_window down

